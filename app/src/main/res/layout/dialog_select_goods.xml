<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="right|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_dialog_cancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/menu_clear" />
        </LinearLayout>

        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/swip_kinds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:swipe_indicatorSize="10dp"
            app:swipe_indicatorMargin="12dp"

            app:swipe_descriptionGravity="center"
            android:layout_weight="0.3" />

        <View
            style="@style/bg_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/swip_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:swipe_indicatorSize="10dp"
            app:swipe_indicatorMargin="12dp"
            app:swipe_descriptionGravity="center"
            android:layout_weight="0.3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <net.soulwolf.widget.speedyselector.widget.SelectorTextView xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/goods_dialog_check"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@color/themeColor"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="确 定"
                    android:textColor="@color/themeColor"
                    android:textSize="12sp"
                    soulwolf:spBorderWidth="1dp"
                    soulwolf:spJustBorder="true"
                    soulwolf:spRadius="5dp"
                    soulwolf:spStatePressedBackground="@color/pureWhite"
                    soulwolf:spStatePressedTextColor="@color/pureWhite" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>